<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <%= image_tag "logo.PNG", class:"logo-icon" %>
    <div class='search-bar-contents'>
    <div>
  <audio controls autoplay src="https://res.cloudinary.com/dr47riclr/video/upload/v1628663126/music/%E5%B0%8F%E9%87%8E%E3%81%A1%E3%82%83%E3%82%93%E5%84%AA%E3%81%97%E3%81%95_txlboe.mp3"></audio>
</div>
      <form class="search-form" action="#">
        <input class='input-box' placeholder='キーワードから探す'>
        <button class="search-button">
          <%= image_tag "search.PNG", class:"search-icon" %>
        </button>
      </form>
    </div>
    <div class='nav'>
      <ul class='lists-right'>
      <% if user_signed_in? %>
        <li><%= link_to current_user.nickname, root_path, class: "user-nickname" %> </li>
        <li><%= link_to "ログアウト", destroy_user_session_path, class: "logout"  %> </li>
        <% else %>
        <li><%= link_to 'ログイン', new_user_session_path, class: "login" %></li>
        <li><%= link_to '新規登録', new_user_registration_path, class: "sign-up" %></li>
      <% end %>
      </ul>
    </div>
</header>